<Window x:Class="Number_Generator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Number Generator" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30*"></RowDefinition>

            <RowDefinition Height="70*"></RowDefinition>
        </Grid.RowDefinitions>

        <Canvas Grid.Row="0" Background="LightGray">
            <Label Grid.Row="0" Content="первое число" Canvas.Left="10" Canvas.Top="3" Width="85" />
            <TextBox Grid.Row="0" x:Name="TextBox1" Width="130" Canvas.Left="95" Canvas.Top="9" HorizontalAlignment="Left" VerticalAlignment="Center" />

            <Label Grid.Row="0" Content="второе чило" VerticalAlignment="Top" Canvas.Left="10" Canvas.Top="35" Width="85"/>
            <TextBox Grid.Row="0" x:Name="TextBox2" Width="130" Canvas.Left="95" Canvas.Top="39" />

            <Label Grid.Row="0" Content="количество" Canvas.Left="10" Canvas.Top="66" Width="87"/>
            <TextBox Grid.Row="0" x:Name="TBQuantity"  Canvas.Left="95" Canvas.Top="70" Width="130" />


            <Button Grid.Row="0" Content="Start" Click="StartButton_Click" Width="110" Canvas.Left="308" Canvas.Top="17" Height="62" Background="White" BorderBrush="Black"/>


        </Canvas>
        <TextBox Grid.Row="1" x:Name="outputTextBox" IsReadOnly="True" TextWrapping="Wrap"/>

    </Grid>


</Window>
